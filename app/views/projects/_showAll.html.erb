
<!-- Portfolio Grid Section -->


  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Projects</h2>
        <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <% Project.find_each do |post| %>
          <div class="col-sm-4 portfolio-item">
            <%= link_to project_path(post) do %>
                <%= image_tag post.image %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</section>


