<h2><%= t("links.sign_up") %></h2>

<div class="form-size">
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t("devise.email") %><br />
    <%= f.email_field :email, autofocus: true, hide_label: true %>
  </div>

  <div class="field">
    <%= f.label t("devise.password") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", hide_label: true %>
  </div>

  <div class="field">
    <%= f.label t("devise.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true %>
  </div>

  <div class="actions">
    <%= f.submit t("links.sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>