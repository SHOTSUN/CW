
<h2> This post has <%= pluralize(@project.donations.count, "Donation") %> </h2>


<% @project.donations.each do |donation| %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <strong> <%= donation.project.user.email %> </strong>
      </div>
      <div class="panel-body">
        <%= donation.pledge %>
        <%= link_to "Delete comment", [donation.project, donation], method: :delete %>
      </div><!-- /panel-body -->
    </div><!-- /panel panel-default -->

<% end %>
